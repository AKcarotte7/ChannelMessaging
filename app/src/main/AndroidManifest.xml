<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vladimir.emelianenko.channelmessaging">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="vladimir.emelianenko.channelmessaging.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vladimir.emelianenko.channelmessaging.ChannelListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="vladimir.emelianenko.channelmessaging.MessageListActivity"
            android:label="@string/app_name" android:windowSoftInputMode="adjustPan" >
        </activity>
    </application>

</manifest>
